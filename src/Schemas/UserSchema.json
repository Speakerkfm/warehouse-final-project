{
  "title": "RegisterSchema",
  "description": "Schema for register user",
  "type": "array",
  "properties": {
    "email": {
      "type": "string",
      "minLength": 3,
      "maxLength": 30,
      "pattern": "^[a-zA-Z0-9@.]{3,30}$"
    },
    "name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 30,
      "pattern": "^[a-zA-Z0-9]{3,30}$"
    },
    "surname": {
      "type": "string",
      "minLength": 3,
      "maxLength": 30,
      "pattern": "^[a-zA-Z0-9]{3,30}$"
    },
    "password": {
      "type": "string",
      "minLength": 6,
      "maxLength": 30,
      "pattern": "^[a-zA-Z0-9]{6,30}$"
    },
    "phone_number": {
      "type": "string",
      "minLength": 3,
      "maxLength": 30,
      "pattern": "^\\+?[0-9]{11}$"
    },
    "company_name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 30,
      "pattern": "^[a-zA-Z0-9]{3,30}$"
    }
  },

  "required": ["email", "name", "surname", "password", "phone_number", "company_name"]
}