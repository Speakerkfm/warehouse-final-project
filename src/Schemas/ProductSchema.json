{
  "title": "ProductSchema",
  "description": "Schema for product",
  "type": "array",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 30,
      "pattern": "^[a-zA-Z0-9]{3,30}$",
      "required": true
    },
    "price": {
      "type": "number",
      "minimum": 0,
      "exclusiveMinimum": true,
      "required": true
    },
    "size": {
      "type": "number",
      "minimum": 0,
      "exclusiveMinimum": true,
      "required": true
    },
    "type_name": {
      "type": "string",
      "minLength": 3,
      "maxLength": 30,
      "pattern": "^[a-zA-Z0-9]{3,30}$",
      "required": true
    }
  },
  "additionalProperties": false
}
